# Cognee Docker Environment Variables
# Copy this to .env and update with your values

# Cognee Configuration
COGNEE_API_KEY=your-cognee-api-key-here
COGNEE_WORKSPACE=sergas-accounts

# Neo4j Configuration (if using production profile)
NEO4J_PASSWORD=change-this-secure-password

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password

# Vector Store Settings
VECTOR_STORE_TYPE=lancedb
VECTOR_STORE_PATH=/data/vectors

# Graph Database Settings
GRAPH_DB_TYPE=networkx  # or neo4j for production

# Feature Flags
ENABLE_EMBEDDINGS=true
ENABLE_SEARCH=true
ENABLE_GRAPH=true

# Performance Settings
BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
