# CopilotKit Integration - Environment Variables
# Copy this to your .env file and fill in the values

# ===================================
# Anthropic API Configuration
# ===================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ===================================
# Zoho CRM Configuration
# ===================================
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_REDIRECT_URI=http://localhost:8000/callback
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_API_BASE_URL=https://www.zohoapis.com/crm/v8

# ===================================
# Cognee Memory Configuration
# ===================================
COGNEE_API_KEY=your_cognee_api_key
COGNEE_API_URL=https://api.cognee.ai

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/sergas_db
REDIS_URL=redis://localhost:6379/0

# ===================================
# Server Configuration
# ===================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================================
# CopilotKit Configuration
# ===================================
COPILOTKIT_PUBLIC_API_KEY=your_copilotkit_public_api_key  # Optional: For cloud features
COPILOTKIT_CLOUD_URL=https://api.copilotkit.ai  # Optional: For cloud features

# ===================================
# Session & Security
# ===================================
SESSION_SECRET=your_secret_key_here_min_32_characters
TOKEN_EXPIRE_MINUTES=60

# ===================================
# Monitoring & Logging
# ===================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
